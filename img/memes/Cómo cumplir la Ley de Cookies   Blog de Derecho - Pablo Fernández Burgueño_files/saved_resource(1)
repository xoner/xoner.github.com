	.emoji-rolleyes {
		letter-spacing: -.2em;
	}

	.emoji-oops, .emoji-idea, .emoji-confused {
		letter-spacing: -.25em;
	}

	.emoji-burrito, .emoji-arrow, .emoji-bear, .emoji-star {
		letter-spacing: -.3em;
	}

	.emoji-developer, .emoji-mrgreen, .emoji-facepalm {
		letter-spacing: -.35em;
	}

}




